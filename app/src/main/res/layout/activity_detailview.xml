<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--    Datenebene und Layout zusammen bei Data Binding 1h32 Min -->
    <data>
        <variable
            name="controller"
            type="org.dieschnittstelle.mobile.android.skeleton.DetailviewActivity"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/itemNameWrapper"
            app:layout_constraintTop_toTopOf="parent"
            app:hintEnabled="true"
            android:error="@{controller.errorStatus}"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:onFocusChange="@{(v, c) -> controller.onNameInputCompleted(c)}"
                android:onTextChanged="@{(a,s,b,c) -> controller.onNameInputChanged()}"
                android:id="@+id/itemName"
                android:text="@={controller.item.name}"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <requestFocus/>
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/itemChecked"
            android:text="checked"
            android:checked="@={controller.item.checked}"
            app:layout_constraintTop_toBottomOf="@+id/itemNameWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:hint="SelectDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemDescriptionWrapper" />

        <EditText
            android:id="@+id/editTextTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Fälligkeitsdatum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.102"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTime" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/itemDescriptionWrapper"

            app:layout_constraintTop_toBottomOf="@id/itemChecked"
            app:hintEnabled="true"
            android:hint="@string/beschreibung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/itemDescription"
                android:gravity="start"
                android:text="@={controller.item.description}"
                android:lines="10"
                android:minLines="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/saveButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/baseline_save_white_24dp"
            android:onClick="@{() -> controller.onSaveItem()}"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/faelligkeitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="108dp"
            android:text="Fälligkeitsdatum"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemDescriptionWrapper"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/faelligkeitUhrzeitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="108dp"
            android:onClick="popTimePicker"
            android:text="Uhrzeit wählen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.195"
            app:layout_constraintStart_toEndOf="@+id/faelligkeitButton"
            app:layout_constraintTop_toBottomOf="@+id/itemDescriptionWrapper"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txtFaelligkeit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/faelligkeitButton"
            tools:layout_editor_absoluteX="76dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/faelligkeitUhrzeit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.593"
            app:layout_constraintStart_toEndOf="@+id/txtFaelligkeit"
            app:layout_constraintTop_toBottomOf="@+id/faelligkeitUhrzeitButton" />

        <TextView
            android:id="@+id/txtVerknüpfteKontakte"
            android:layout_width="157dp"
            android:layout_height="23dp"
            android:layout_marginTop="100dp"
            android:text="Verknüpfte Kontakte:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/faelligkeitButton"
            app:layout_constraintVertical_bias="0.016" />

        <TextView
            android:id="@+id/txtVerknüpfteKontakteNummer1"
            android:layout_width="157dp"
            android:layout_height="23dp"
            android:layout_marginTop="100dp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.165"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/faelligkeitButton"
            app:layout_constraintVertical_bias="0.415" />

        <TextView
            android:id="@+id/txtVerknüpfteKontakteNummer2"
            android:layout_width="157dp"
            android:layout_height="23dp"
            android:layout_marginTop="100dp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.165"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/faelligkeitButton"
            app:layout_constraintVertical_bias="0.144" />

        <TextView
            android:id="@+id/txtVerknüpfteKontakteNummer3"
            android:layout_width="157dp"
            android:layout_height="23dp"
            android:layout_marginTop="100dp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.165"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/faelligkeitButton"
            app:layout_constraintVertical_bias="0.283" />

        <!--        <CheckBox-->
<!--            android:id="@+id/itemIsPrioItem"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:checked="@={controller.item.checked}"-->
<!--            android:text="wichtiges Item"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/itemDescriptionWrapper" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
